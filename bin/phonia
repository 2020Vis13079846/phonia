#blue start 
	BS="-e \033[1;34m[*]\033[0;97m "
#color end
	CE="\033[0m"
#red start
	RS="-e \033[1;31m[-]\033[0;97m "
#green start
	GNS="-e \033[1;32m[+]\033[0;97m "

printf '\033]2;Phonia Toolkit\a'

if [[ "$1" = "-u" || "$1" = "--update" ]]
then
if [[ -d /data/data/com.termux ]]
then
if [[ -f /data/data/com.termux/files/usr/bin/phonia ]]
then
UPD="true"
else
UPD="false"
fi
else
if [[ -f /usr/local/bin/phonia ]]
then
UPD="true"
else
UPD="false"
fi
fi
{
ASESR="$( curl -s checkip.dyndns.org | sed -e 's/.*Current IP Address: //' -e 's/<.*$//' )"
} &> /dev/null
if [[ "$ASESR" = "" ]]
then 
sleep 1
echo ""$RS"Download failed!"$CE""
sleep 1
exit
fi
if [[ $EUID -ne 0 ]]
then
sleep 1
echo ""$RS"Permission denied!"$CE""
sleep 1
exit
fi
sleep 1
echo ""$BS"Installing update..."$CE""
{
rm -rf ~/phonia
rm /bin/phonia
rm /usr/local/bin/phonia
rm /data/data/com.termux/files/usr/bin/phonia
cd ~
git clone https://github.com/entynetproject/phonia.git
if [[ "$UPD" != "true" ]]
then
sleep 0
else
cd ~/phonia
chmod +x install.sh
./install.sh
fi
} &> /dev/null
echo ""$GNS"Successfully updated!"$CE""
sleep 1
exit
fi

if [[ -d ~/phonia ]]
then
{
cd ~/phonia
mv phonia.py etc
mv etc/phonia ~/phonia
mkdir etc/.disabled
mv lib/logger.py etc/.disabled
mv etc/logger.py lib
cp etc/.disabled/logger.py etc
rm -r etc/.disabled
} &> /dev/null
python3 phonia $1 $2 $3 $4 $5 $6 $7 $8 $9
{
mv phonia etc
mv etc/phonia.py ~/phonia
mkdir etc/.disabled
mv lib/logger.py etc/.disabled
mv etc/logger.py lib
cp etc/.disabled/logger.py etc
rm -r etc/.disabled
} &> /dev/null
else
{
ASESR="$( curl -s checkip.dyndns.org | sed -e 's/.*Current IP Address: //' -e 's/<.*$//' )"
} &> /dev/null
if [[ "$ASESR" != "" ]]
then 
cd ~
{
git clone https://github.com/entynetproject/phonia.git
cd $OLDPWD
cd ~/phonia
mv phonia.py etc
mv etc/phonia ~/phonia
mkdir etc/.disabled
mv lib/logger.py etc/.disabled
mv etc/logger.py lib
cp etc/.disabled/logger.py etc
rm -r etc/.disabled
} &> /dev/null
python3 phonia $1 $2 $3 $4 $5 $6 $7 $8 $9
{
mv phonia etc
mv etc/phonia.py ~/phonia
mkdir etc/.disabled
mv lib/logger.py etc/.disabled
mv etc/logger.py lib
cp etc/.disabled/logger.py etc
rm -r etc/.disabled
} &> /dev/null
else
cd ~
sleep 1
exit
fi
fi
